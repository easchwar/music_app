<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <div> <%= current_user.email %></div>
  <div> <%= button_to "Log Out", session_url, method: :delete  %> </div>
<% else %>
<div> <%= link_to "Sign Up", new_user_url, method: :get  %> or
      <%= link_to "Sign In", new_session_url, method: :get  %></div>

<% end %>

<%= yield %>

</body>
</html>
